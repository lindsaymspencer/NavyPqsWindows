@model NavyPqs.Ui.Models.SailorViewModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {font-family: Arial;}

    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

    /* Style the buttons inside the tab */
    .tab button {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.3s;
        font-size: 17px;
    }

    /* Change background color of buttons on hover */
    .tab button:hover {
        background-color: #ddd;
    }

    /* Create an active/current tablink class */
    .tab button.active {
        background-color: #ccc;
    }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>

<h1>
    @Html.DisplayFor(model => model.Rank)
    @Html.DisplayFor(model => model.FirstName)
    @Html.DisplayFor(model => model.LastName)
</h1>
<div>
    @*<a asp-action="Export" asp-route-id="@Model.Id">Export</a> |*@
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="">
    <button class="w3-bar-item w3-button tablinks" onclick="openPqs(event, 'twoAlpha')">2A</button>
    <button class="w3-bar-item w3-button tablinks" onclick="openPqs(event, 'twoBravo')">2B</button>
</div>

<div id="twoAlpha" class="w3-container pqs">
    @{
        await Html.RenderPartialAsync("../Shared/Partials/ViewPqs", Model.Pqses[0]);
    }
</div>

<div id="twoBravo" class="w3-container pqs" style="display:none">
    @{
        await Html.RenderPartialAsync("../Shared/Partials/ViewPqs", Model.Pqses[1]);
    }
</div>

<script>
    function openPqs(evt, pqs) {
        var i, tabcontent, tablinks;
        var tabcontent = document.getElementsByClassName("pqs");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(pqs).style.display = "block";
        evt.currentTarget.className += " active";
    }
</script>
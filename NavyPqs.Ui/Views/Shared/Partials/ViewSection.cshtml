@model NavyPqs.Ui.Models.SectionViewModel

<div>
    <h5>@Html.DisplayFor(model => model.Number) - @Html.DisplayFor(model => model.Name)</h5>
    <hr />
    
    @for (int i = 0; i < Model.LineItem.Length; i++)
    {
        @Html.DisplayFor(model => model.LineItem[i]) @Html.CheckBoxFor(model => model.Signed[i])
    }
</div>